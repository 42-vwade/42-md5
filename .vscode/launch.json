	"version": "0.2.0",
	"configurations": [
		{
			"name": "Build: Test"
			,	"type": "cppdbg"
			,	"request": "launch"
			,	"program": "/bin/ls"
			,	"cwd": "${workspaceFolder}"
			,	"preLaunchTask": "Make: Main Configuration"
		},
		{
			"name": "Debug: Test"
			,	"type": "cppdbg"
			,	"request": "launch"
			,	"program": "${workspaceFolder}/x.test"
			,	"args": []
			,	"stopAtEntry": false
			,	"cwd": "${workspaceFolder}"
			,	"environment": []
			,	"externalConsole": false
			,	"MIMode": "lldb"
			,	"preLaunchTask": "Make: Test Configuration"
			//,	"postDebugTask": "Remove Test"
		},
		{
			"name": "Run: Test"
			,	"type": "cppdbg"
			,	"request": "launch"
			,	"program": "${workspaceFolder}/ft_ssl"
			,	"args": ["md5"]
			,	"stopAtEntry": false
			,	"cwd": "${workspaceFolder}"
			,	"environment": []
			,	"externalConsole": false
			,	"MIMode": "lldb"
		},
		{
			"name": "Arg: Test"
			,	"type": "cppdbg"
			,	"request": "launch"
			,	"program": "${workspaceFolder}/ft_ssl"
			,	"args": [
				"md5", "-s", "abc", "123"
			]
			,	"stopAtEntry": false
			,	"cwd": "${workspaceFolder}"
			,	"environment": []
			,	"externalConsole": false
			,	"MIMode": "lldb"
		}
	]
}